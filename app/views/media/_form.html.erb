<%= form_for(@medium, :html => { :multipart => true }) do |f| %>
  <% if @medium.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@medium.errors.count, "error") %> prohibited this medium from being saved:</h2>

      <ul>
      <% @medium.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </div>
  <div class="field">
    <%= f.file_field :file %>
  </div>
  <div class="field">
    <%= f.label :folder_id %><br />
    <%= f.collection_select(:folder_id, Folder.all, :id, :name) %>
  </div>
  <div class="field">
    <% for tag in @tags %>
    <input type="checkbox" id="<%= tag.id %>" name="tag_ids[]" value="<%= tag.id %>" <% if @medium.tags.include? tag %>checked="checked"<% end %>/> <%= tag.name %><br/>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
