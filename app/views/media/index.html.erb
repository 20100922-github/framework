<h1>Listing media</h1>

<%= link_to 'New Medium', new_medium_path %><br/>
<table>
  <tr>
    <th>File</th>
    <th>Note</th>
    <th>Folder</th>
    <th>Tags</th>
    <th># Comments</th>
    <th>Roles</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @media.each do |medium| %>
  <tr>
    <td><%= link_to image_tag(medium.file.url(:thumb)), medium %></td>
    <td><%= medium.note %></td>
    <td><%= link_to medium.folder.name, folder_path(medium.folder) %></td>
    <td><% for tag in medium.tags %><%= link_to tag.name, tag_path(tag) %> <% end %></td>
    <td><%= medium.comments.size %></td>
    <td><% medium.folder.roles.each do |r| %><%= link_to r.name, role_path(r) %> <% end %></td>
    <td><%= link_to 'Edit', edit_medium_path(medium) %></td>
    <td><%= link_to 'Destroy', medium, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
