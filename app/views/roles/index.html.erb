<h1>Listing roles</h1>

<% if can? :create, Role %>
<div><%= link_to image_tag("add_32x32.png"), new_role_path %></div>
<% end %>

<div><%= will_paginate @roles %></div>

<div class="table">
  <div class="tr">
    <div class="th">Name</div>
    <div class="th">Description</div>
    <div class="th"># Folders that can be accessed</div>
    <div class="th"></div>
    <div class="th"></div>
    <div class="th"></div>
  </div>
<% @roles.each do |role| %>
  <div class="tr <%= cycle("odd", "even") %>">
    <div class="td"><%= role.name %></div>
    <div class="td"><%= role.description %></div>
    <div class="td"><%= role.folders.size %></div>
    <div class="td"><%= link_to 'Show', role %></div>
    <div class="td"><%= link_to 'Edit', edit_role_path(role) %></div>
    <div class="td"><%= link_to 'Destroy', role, :confirm => 'Are you sure?', :method => :delete %></div>
  </div>
<% end %>
</div>

<div><%= will_paginate @roles %></div>
