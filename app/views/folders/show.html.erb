<div class="table">
  <div class="tr">
    <div class="td">
      <div class="cover float">
        <%= image_tag(@folder.cover.url(:medium)) %>
      </div>
      <div class="header"><%= @folder.name %></div>
      <div class="content"><%= @folder.description %></div>
      <div>
        <% @media.each do |m| %>
          <span class="thumbs">
            <%= link_to image_tag(m.file.url(:quadratic)), m %>
          </span>
        <% end %>
        <span>
          <%= link_to image_tag("add_48x48.png"), new_medium_path %>
          </span>
      </div>
      <div>
        <%= image_tag "access_48x48.png" %>
        <ul>
        <% @folder.roles.each do |r| %>
          <li><%= link_to r.name, r %></li>
        <% end %>
        </ul>
      </div>
      <div>
        <%= link_to image_tag("previous_48x48.png"), folder_path(@folder.previous) %>
        <%= link_to image_tag("up_48x48.png"), folders_path %>
        <%= link_to image_tag("next_48x48.png"), folder_path(@folder.next) %>
        <%= link_to 'Edit', edit_folder_path(@folder) %> |
      </div>
    </div>
  </div>
</div>
