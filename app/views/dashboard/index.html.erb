<% if user_signed_in? %>
<h1>Last 5 folders created:</h1>
  <div class="table">
    <div class="tr middle">
      <% @folders.each do |f| %>
        <% if can? :read, f %>
      <div style="width: 15%" class="td center">
        <div class="thumbs"><%= link_to image_tag(f.cover.url(:thumb)), f %></div>
        <div><%= f.created_at.to_formatted_s(:short) %></div>
        <div><%= link_to f.name, f %></div>
      </div>
        <% end %>
      <% end %>
      <div class="td center"><%= link_to "Show all folders", folders_path %></div>
    </div>
  </div>

  <h1 style="padding-top: 30px;">Last 5 comments created:</h1>
  <div class="table">
    <div class="tr middle">
    <% @comments.each do |c| %>
      <% if can? :read, c %>
        <div style="width: 15%" class="td center">
          <div class="thumbs"><%= link_to image_tag(c.medium.file.url(:quadratic)), c.medium %></div>
          <div><%= c.created_at.to_formatted_s(:short) %></div>
          <div><%= link_to c.user.username, c.user %></div>
          <div><%= link_to c.medium.folder.name, c.medium.folder %></div>
          <div>"<%= c.text %>"</div>
        </div>
      <% end %>
    <% end %>
      <div class="td center"><%= link_to "Show all comments", comments_path %></div>
    </div>
  </div>
<% end %>
