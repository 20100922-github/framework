<% if user_signed_in? %>
  <h1>Last 5 folders created:</h1>
  <div class="table">
    <div class="tr middle">
    <% @folders.each do |f| %>
      <div style="width: 15%" class="td center">
        <span class="thumbs"><%= link_to image_tag(f.cover.url(:thumb)), f %></span>
        <span><%= link_to f.name, f %></span>
      </div>
    <% end %>
      <div class="td center"><%= link_to "Show all folders", folders_path %></div>
    </div>
  </div>

  <h1 style="padding-top: 30px;">Last 5 comments created:</h1>
  <div class="table">
    <div class="tr middle">
    <% @comments.each do |c| %>
      <% if can? :read, c %>
        <div style="width: 15%" class="td center">
          <span class="thumbs"><%= link_to image_tag(c.medium.file.url(:quadratic)), c.medium %></span>
          <span><%= c.created_at.to_formatted_s(:short) %><br/><%= link_to c.user.username, c.user %><br/> in <%= link_to c.medium.folder.name, c.medium.folder %> on ...</span>
          <span>"<%= c.text %>"</span>
        </div>
      <% end %>
    <% end %>
      <div class="td center"><%= link_to "Show all comments", comments_path %></div>
    </div>
  </div>
<% end %>
