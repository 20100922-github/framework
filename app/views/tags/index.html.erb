<h1>Listing tags</h1>

<table>
  <tr>
    <th>Name</th>
    <th># Media</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr class="<%= cycle("odd", "even") %>">
    <td><%= link_to tag.name, tag_path(tag) %></td>
    <td><%= tag.media.size %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', tag, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

