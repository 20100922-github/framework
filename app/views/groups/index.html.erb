<h1>Listing groups</h1>

<% if can? :create, Group %>
<div><%= link_to image_tag("add_32x32.png"), new_group_path %></div>
<% end %>

<div class="table">
  <div class="tr">
    <div class="th">Name</div>
    <div class="th">Description</div>
    <div class="th"># Users associated to</div>
    <div class="th"># Folders that can be accessed</div>
    <div class="th"></div>
    <div class="th"></div>
    <div class="th"></div>
  </div>
<% @groups.each do |group| %>
  <div class="tr <%= cycle("odd", "even") %>">
    <div class="td"><%= group.name %></div>
    <div class="td"><%= group.description %></div>
    <div class="td"><%= group.users.size %></div>
    <div class="td"><%= group.folders.size %></div>
    <div class="td"><%= link_to 'Show', group %></div>
    <div class="td"><%= link_to 'Edit', edit_group_path(group) %></div>
    <div class="td"><%= link_to 'Destroy', group, :confirm => 'Are you sure?', :method => :delete %></div>
  </div>
<% end %>
</div>
